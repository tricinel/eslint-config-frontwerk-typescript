{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["es2017"],
    "outDir": "./dist",
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "rules/*.js",
    "index.js",
    "strict.js",
    "no-type-checking.js",
    "__tests__/*.js"
  ]
}
